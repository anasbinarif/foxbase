{
  "name": "foxbase-filtering-starter",
  "version": "1.0.0",
  "private": true,
  "description": "Starter repo for FoxBase reductive filtering service (Node/Express/Postgres/TypeScript).",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/main.js",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "lint": "eslint .",
    "format": "prettier -w .",
    "test": "npm run test:build && node --test dist-test",
    "test:build": "tsc -p tsconfig.test.json"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "pg": "^8.12.0",
    "pino": "^9.3.2",
    "pino-http": "^10.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.12",
    "@types/pg": "^8.11.6",
    "eslint": "^9.9.0",
    "prettier": "^3.3.3",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.1"
  }
}
